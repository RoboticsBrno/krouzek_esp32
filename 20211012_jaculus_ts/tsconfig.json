{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "out/",
    "sourceMap": true,
    "target": "ES5",
    "lib": [
      "es5",
      "dom",
      "ES2015.Promise",
      "ES2015.Proxy",
      "ES2015.Symbol",
      "ES2018.Promise",
      "ES2015.Generator"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
